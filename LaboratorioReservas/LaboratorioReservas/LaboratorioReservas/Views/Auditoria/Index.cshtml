@model IEnumerable<Modelos.Auditoria>
@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <div class="form-group" align="center">
                <img src="~/Content/img/auditoria.png" width="100" height="100">
                <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR <br />SEDE-ESMERALDAS </h3>
                <h4 class="text-center">AUDITORIAS</h4>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
            @using (Html.BeginForm("Index", "Auditoria", "Index", FormMethod.Get))
            {
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Buscar...", onKeyUp = "document.getElementById(this.id).value=document.getElementById(this.id).value.toUpperCase()" })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="panel panel-info panel-table">
        <div class="panel-heading">Auditorias</div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Usuario.Nombres)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Accion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Detalle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Creacion)
                    </th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayName((@item.UsuarioId == null) ? "Sistema" : item.Usuario.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Accion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Detalle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Creacion)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>