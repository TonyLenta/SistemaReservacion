@model Modelos.Usuario
@{
    ViewBag.Title = "Perfil";
}

<div class="row">
    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
        <div class="form-group" align="center">
            <img src="~/Content/iconoceleste.gif" width="100" height="100">
            <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR<br />SEDE-ESMERALDAS</h3>
            <h4 class="text-center"><span class="label label-primary">DETALLE DE USUARIO</span></h4>
        </div>
    </div>
</div>

<div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Token) </th>
                    <th>@Html.DisplayNameFor(model => model.ChatId)</th>
                    <th>Username</th>
                    <th>@Html.DisplayNameFor(model => model.Role.Rol)</th>

                    <th>@Html.DisplayNameFor(model => model.Creacion)</th>
                    <th>@Html.DisplayNameFor(model => model.Modificacion)</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> @Html.DisplayFor(model => model.Nombres)</td>
                    <td> @Html.DisplayFor(model => model.Cedula)</td>
                    <td> @Html.DisplayFor(model => model.Token)</td>
                    <td> @Html.DisplayFor(model => model.ChatId)</td>
                    <td> @Html.DisplayFor(model => model.NombreUsuario)</td>
                    <td>@Html.DisplayFor(model => model.Role.Rol)</td>
                    <td>@Html.DisplayFor(model => model.Creacion)</td>
                    <td>@Html.DisplayFor(model => model.Modificacion)</td>

                </tr>
            </tbody>
        </table>
    </div>
</div>


