@model Modelos.Usuario
@{
    ViewBag.Title = "Cambiar";
}

@using (Html.BeginForm("Cambiar", "USUARIOs", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.UsuarioId)
    <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
        <div class="form-group" align="center">
            <img src="~/Content/iconoceleste.gif" width="100" height="100">
            <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR</h3>
            <h4 class="text-center">SEDE-ESMERALDAS</h4>
            <h4 class="text-center"><span class="label label-primary">CAMBIO DE CONTRASEÑA</span></h4>
        </div>
    </div>

    <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">

        <div class="panel panel-primary">
            <div class="panel-heading">Ingrese Nueva Contraseña</div>
            <div class="panel-body">
                <div class="form-group">
                    @Html.LabelFor(m => m.Contrasena, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.PasswordFor(m => m.Contrasena, new { @class = "form-control well", pattern = Html.Raw("^(?=(?:.*\\d){2})(?=(?:.*[A-Z]){2})(?=(?:.*[a-z]){2})\\S{8,}$"), required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="glyphicon glyphicon-repeat btn btn-primary" value="Restablecer" />
                    </div>
                </div>
            </div>
        </div>
    </div>
}
