@model Modelos.Usuario

@{
    ViewBag.Title = "Delete";
}
<div class="row">
    <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
        <h2 style="text-align:center;">ELIMINAR USUARIO</h2>
    </div>
</div>
<h3>SEGURO DESEAS ELIMINAR ESTE USUARIO?</h3>
<div>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                    <th>@Html.DisplayNameFor(model => model.Token) </th>
                    <th>@Html.DisplayNameFor(model => model.ChatId)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td> @Html.DisplayFor(model => model.Nombres)</td>
                    <td> @Html.DisplayFor(model => model.Cedula)</td>
                    <td> @Html.DisplayFor(model => model.Token)</td>
                    <td> @Html.DisplayFor(model => model.ChatId)</td>
                    <td> @Html.DisplayFor(model => model.NombreUsuario)</td>
                </tr>
            </tbody>
        </table>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()


        <div class="form-group" align="center">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn-danger btn">
                    <span class="glyphicon glyphicon-trash">ELIMINAR</span>

                </button>
            </div>
        </div>
    }
</div>

