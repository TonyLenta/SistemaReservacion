@model Modelos.Usuario
@{
    ViewBag.Title = "Restablecer";
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="Creative - Bootstrap 3 Responsive Admin Template">
    <meta name="author" content="GeeksLabs">
    <meta name="keyword" content="Creative, Dashboard, Admin, Template, Theme, Bootstrap, Responsive, Retina, Minimal">
    <link rel="shortcut icon" href="~/Content/img/favicon.png">

    <title>Login Page 2 | Creative - Bootstrap 3 Responsive Admin Template</title>

    <!-- Bootstrap CSS -->
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <!-- bootstrap theme -->
    <link href="~/Content/css/bootstrap-theme.css" rel="stylesheet">
    <!--external css-->
    <!-- font icon -->
    <link href="~/Content/css/elegant-icons-style.css" rel="stylesheet" />
    <link href="~/Content/css/font-awesome.css" rel="stylesheet" />
    <!-- Custom styles -->
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link href="~/Content/css/style-responsive.css" rel="stylesheet" />
</head>

<body class="login-img3-body">
    <div class="container">
        @using (Html.BeginForm("Restablecer", "Home", FormMethod.Post, new { @class = "login-form" }))
        {
            @Html.AntiForgeryToken()
            <div class="login-wrap">
                <p style="text-align:center;" class="login-img"><i class="icon_lock_alt"></i>Restablecer</p>
                <div class="radio">
                    <label><input type="radio" name="optradio" value="telegram" checked>Telegram</label>
                </div>
                <div class="radio">
                    <label><input type="radio" name="optradio" value="correo">Correo Electrónico</label>
                </div>
                <div class="input-group">
                    @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { type = "email", @class = "form-control", placeholder = "E-Mail", autofocus = "autofocus" } })
                    <span class="input-group-addon"><i class="icon_key_alt"></i></span>
                </div>
                    @if (ViewBag.Message != null)
                    {
                        if (ViewBag.Tipo == "Error!")
                        {
                            <div class="alert alert-danger">
                                <strong>@ViewBag.Tipo </strong> @ViewBag.Message
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success">
                                <strong>@ViewBag.Tipo </strong> @ViewBag.Message <a href="~/Home/Login"><p>Ingresar</p></a>
                            </div>
                        }
                    }
                <button class="btn btn-primary btn-lg btn-block" type="submit">Restablecer</button>
            </div>
        }
    </div>


</body>

</html>