@model IEnumerable<Modelos.Auditoria>
@{
    ViewBag.Title = "Auditoria";
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                <div class="form-group" align="center">
                    <img src="~/Content/iconoceleste.gif" width="100" height="100">
                    <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR<br />SEDE-ESMERALDAS</h3>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading">Auditorias</div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list table-responsive">
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Usuario.Nombres)
                                </th>

                                <th>
                                    @Html.DisplayNameFor(model => model.Accion)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Detalle)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Creacion)
                                </th>

                            </tr>

                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayName((@item.UsuarioId == null) ? "Sistema" : item.Usuario.Nombres)


                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Accion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Detalle)
                                    </td>
                                    <td>

                                        @Html.DisplayFor(modelItem => item.Creacion)
                                    </td>
                                </tr>
                            }

                        </table>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel panel-default -->
            </div>
        </div>
    </div>
</body>
</html>

