@model IEnumerable<Modelos.Usuario>
@{
    ViewBag.Title = "Usuario";
    Layout = null;
}

<html>
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
                <div class="form-group" align="center">
                    <img src="~/Content/iconoceleste.gif" width="100" height="100">
                    <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR</h3>
                    <h4 class="text-center">SEDE-ESMERALDAS</h4>
                </div>
            </div>

            <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
                <div class="panel panel-info">
                    <div class="panel-heading">USUARIO</div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.Nombres)</th>
                                    <th>@Html.DisplayNameFor(model => model.Cedula)</th>
                                    <th>@Html.DisplayNameFor(model => model.Token) </th>
                                    <th>@Html.DisplayNameFor(model => model.ChatId)</th>
                                    <th>Username</th>
                                    <th>@Html.DisplayNameFor(model => model.Role.Rol)</th>
                                    <th>@Html.DisplayNameFor(model => model.Creacion)</th>
                                    <th>@Html.DisplayNameFor(model => model.Modificacion)</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Nombres)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Cedula)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Token)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.ChatId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.NombreUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Role.Rol)
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.Creacion)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Modificacion)
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div><!-- /.panel-body -->
                </div><!-- /.panel panel-default -->
            </div>
        </div>
    </div>
</body>
</html>

