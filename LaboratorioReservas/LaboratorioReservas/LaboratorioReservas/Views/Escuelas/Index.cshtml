@model IEnumerable<Modelos.Escuela>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <div class="form-group" align="center">
                <img src="~/Content/img/escuelas.png" width="100" height="100">
                <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR<br />SEDE-ESMERALDAS</h3>
                <h4 class="text-center">ESCUELAS</h4>
            </div>
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
            @using (Html.BeginForm("Index", "ESCUELAs", "Index", FormMethod.Get))
            {

                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Buscar...", onKeyUp = "document.getElementById(this.id).value=document.getElementById(this.id).value.toUpperCase()" })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="panel panel-info panel-table">
        <div class="panel-heading">
            @Html.ActionLink("Agregar", "Create", "", htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-floppy-saved" })

        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.NombreEscuela)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.Creacion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Modificacion)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreEscuela)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Creacion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Modificacion)
                        </td>
                      
                        <td>
                            @Html.ActionLink("Mostrar", "Details", new { id = item.EscuelaId }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-success" })
                            @Html.ActionLink("Editar", "Edit", new { id = item.EscuelaId }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-info" })
                            @Html.ActionLink("Eliminar", "Delete", new { id = item.EscuelaId }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
