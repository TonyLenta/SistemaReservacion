@model IEnumerable<Modelos.Solicitud>

@{
    ViewBag.Title = "Index";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <div class="form-group" align="center">
                <img src="~/Content/iconoceleste.gif" width="100" height="100">
                <h3 class="text-center">PONTIFICIA UNIVERSIDAD CATOLICA DEL ECUADOR<br />SEDE-ESMERALDAS</h3>
                <h4 class="text-center">SOLICITUDES</h4>
            </div>
        </div>

        <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
            @using (Html.BeginForm("Index", "SOLICITUDs", "Index", FormMethod.Get))
            {
                <div class="form-group">
                    <div class="input-group">
                        @Html.TextBox("search", null, new { @class = "form-control", placeholder = "Buscar...", onKeyUp = "document.getElementById(this.id).value=document.getElementById(this.id).value.toUpperCase()" })
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Buscar</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="panel panel-info panel-table">
        <div class="panel-heading">
            @Html.ActionLink("Agregar", "Create", "", htmlAttributes: new { @class = "btn btn-primary glyphicon glyphicon-floppy-saved" })

        </div>
        <div class="panel-body">
            <table class="table table-striped table-bordered table-list table-responsive">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FechaFinal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoraInicio)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.HoraFinal)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Materia.NombreMateria)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Sala.Salas)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.EstadoSolicitud)
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaFinal)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraInicio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HoraFinal)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Materia.NombreMateria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sala.Salas)
                        </td>

                        <td>
                            @Html.Raw(((@item.Confirmacion == "EN ESPERA") ? "<h4><span class='label label-success'>" + @item.Confirmacion + "</span></h4>" : (item.Confirmacion == "TERMINADO") ? "<h4><span class='label label-danger'>" + @item.Confirmacion + "</span></h4>" : "<h4><span class='label label-warning'>" + @item.Confirmacion + "</span></h4>"))
                        </td>
                        <td>
                            @if (item.Confirmacion.Equals("TERMINADO"))
                            {
                                @Html.ActionLink("Mostrar", "Details", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-success" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-info" ,disabled = "disabled" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger", disabled = "disabled" })
                            }
                            else
                            {
                                @Html.ActionLink("Mostrar", "Details", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-eye-open btn btn-success" })
                                @Html.ActionLink("Editar", "Edit", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-pencil btn btn-info" })
                                @Html.ActionLink("Eliminar", "Delete", new { id = item.SolicitudId }, htmlAttributes: new { @class = "glyphicon glyphicon-trash btn btn-danger" })
                            }

                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
